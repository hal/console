<view>
    <metadata address="/{selected.profile}/subsystem=iiop-openjdk">
        <h1>IIOP OpenJDK</h1>
        <p>{{metadata.getDescription().getDescription()}}</p>
        <form id="iiop-openjdk-form" title="IIOP OpenJDK" auto-save="true" reset="true">
            <attributes>
                <!-- Use the attribute groups from the resource description -->
                <group name="orb"/>
                <group name="naming"/>
                <group name="initializers"/>
                <group name="as-context" title="AS Context"/>
                <group name="sas-context" title="SAS Context"/>
                <group name="security"/>
                <group name="tcp"/>
                <group id="iiop-openjdk-properties" title="Properties">
                    <!-- Not part of any group -->
                    <attribute name="properties"/>
                </group>
            </attributes>
        </form>
    </metadata>
</view>